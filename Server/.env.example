# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and configure the values for your environment
# Never commit .env files to version control!

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Application environment (development, production, test)
NODE_ENV=development

# Server host and port
HOST=localhost
PORT=3001

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend application URL for CORS
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# JWT secret key (REQUIRED in production)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -----------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# -----------------------------------------------------------------------------
# Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Log format (dev, combined, common, short, tiny)
LOG_FORMAT=combined

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=false

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# API version
API_VERSION=1.0.0

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (for future use)
# -----------------------------------------------------------------------------
# Database connection URL
# DATABASE_URL=mongodb://localhost:27017/myapp
# DATABASE_URL=postgresql://username:password@localhost:5432/myapp

# Maximum database connections
DATABASE_MAX_CONNECTIONS=20

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (for future use)
# -----------------------------------------------------------------------------
# SMTP configuration for sending emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# -----------------------------------------------------------------------------
# ADDITIONAL CONFIGURATION
# -----------------------------------------------------------------------------
# Add any additional environment variables your application needs below
