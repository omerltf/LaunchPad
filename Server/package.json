{
  "name": "launchpad-server",
  "version": "1.0.0",
  "description": "LaunchPad - Node.js server template for full-stack applications",
  "main": "src/app.js",
  "scripts": {
    "start": "echo 'PRODUCTION START DISABLED - Use npm run dev for development only' && exit 1",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "node src/data/database-cli.js migrate",
    "db:rollback": "node src/data/database-cli.js rollback",
    "db:status": "node src/data/database-cli.js status",
    "db:health": "node src/data/database-cli.js health",
    "db:example": "node src/data/database-cli.js example"
  },
  "keywords": [
    "launchpad",
    "template",
    "starter",
    "nodejs",
    "express",
    "server",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
